@model Gommunity
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Edit Gommunity";
}
<h2>@Model.GName - Edit</h2>
<form asp-action="Edit" asp-controller="GommunityManage">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
    <span asp-validation-for="Id" class="text-danger"></span>
    <div class="form-group">
        <label asp-for="GName" class="control-label">Name</label>
        <input asp-for="GName" class="form-control" />
        <span asp-validation-for="GName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
    <div class="form-group">
        <input type="submit" asp-action="Delete" asp-controller="GommunityManage" value="Delete" class="btn btn-danger" />
    </div>
</form>