@{
    ViewData["Title"] = "Send Message";
}

<h2>Send a Message</h2>

<form asp-action="SendMessage" asp-controller="Message" method="post">
    <div class="form-group">
        <label for="receiverUsername">Receiver Username</label>
        <input type="text" class="form-control" id="receiverUsername" name="receiverUsername" value="@ViewBag.ReceiverUsername" required>
    </div>
    <div class="form-group">
        <label for="content">Message</label>
        <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
    </div>
    <input type="submit" value="Send" class="btn btn-primary"></input>
</form>
