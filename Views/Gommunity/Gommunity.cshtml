@model Gommunity
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = Model.GName;
}

<h2>@Model.GName</h2>
<a class="btn btn-primary" asp-controller="Gommunity" asp-action="CreatePost" asp-route-gommunityName="@Model.GName" >Create a Post</a>
<h3>Posts</h3>
<form asp-action="Index" asp-controller="Gommunity" method="post">
    <input type="hidden" name="gommunityName" value="@Model.GName" />
    <select name="sortOrder">
        <option value="newest">Najnowsze</option>
        <option value="oldest">Najstarsze</option>
        <option value="best">Najlepsze</option>
        <option value="worst">Najgorsze</option>
    </select>
    <input type="submit" value="Sortuj" />
</form>
<div class="posts">
@foreach(var post in Model.Posts)
{
    <a asp-controller="Gommunity" asp-action="ViewPost" asp-route-postId="@post.Id">
        <div class="card">
            <h6>Gratio: @post.Gratio</h6>
            <h6>Comments: @post.Comments.Count()</h6>
            <div class="card-header">
                <h6>Guser.@post.Guser.UserName</h6>
                <h3>@post.Title</h3>
            </div>
            <div class="card-body">
                <p>@post.Description</p>
                    @if (post.Image != null)
                    {
                        <img style="max-width:100%;max-height:50vh" src="data:image/jpeg;base64,@post.Image" />
                    }
            </div>
        </div>
    </a>
}
</div>