@model List<SampleDotNet.Models.Post>

@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Index" method="post">
    <select name="sortOrder">
        <option value="newest">Najnowsze</option>
        <option value="oldest">Najstarsze</option>
        <option value="best">Najlepsze</option>
        <option value="worst">Najgorsze</option>
    </select>
    <input type="submit" value="Sortuj" />
</form>

<div class="posts">
    @foreach (var post in Model)
    {
        <a href="https://google.com">
            <div class="card">
                <div class="card-header">
                    <h6>Guser.@post.Guser.UserName</h6>
                    <h3>@post.Title</h3>
                    <h6>Utworzono: @post.CreatedAt.ToString("dd-MM-yyyy")</h6>
                </div>
                <div class="card-body">
                    <p>@post.Description</p>
                    @if (post.Image != null)
                    {
                        <img style="max-width:100%;max-height:50vh" src="data:image/jpeg;base64,@post.Image" />
                    }
                </div>
            </div>
        </a>
    }
</div>